@using StackOverFlow.Data;
@model QuestionTagViewModel
<div class="row">
    <div class="col-lg-8">
        <h1>@Model.Question.Title</h1>
        <hr>
        <p><span class="glyphicon glyphicon-time"></span> Posted on @Model.Question.DatePosted.ToLongDateString()</p>
        <p>@Model.Question.Text</p>
        <hr>
        <hr>
        @if (User.Identity.IsAuthenticated)
        {
            <button id="button" value="@Model.Question.Id"><img width="20" height="20" src="data:image/png;base64," /></button>
        }
        @if (!User.Identity.IsAuthenticated)
        {
            <button disabled="disabled" value="@Model.Question.Id"><img width="20" height="20" src="data:image/png;base64," /></button>

        }<br />

        <input type="hidden" value="@Model.Question.Id" id="QuestionId" />
        <h5 id="likes">0</h5>
        <label>Tags:</label>
        @foreach (Tag t in Model.Tags)
        {
            <p>@t.Name</p>
        }
        <div class="well">
            @if (User.Identity.IsAuthenticated)
            {
                <h4>Leave an Answer</h4>
                <form role="form" method="post" action="/home/AddAnswer">
                    <input type="hidden" value="@Model.Question.Id" name="QuestionId" />
                    <input type="hidden" value="@DateTime.Now" name="DatePosted" />
                    <br />
                    <div class="form-group">
                        <textarea id="content" placeholder="What is your Answer??" class="form-control" rows="3" name="Text"></textarea>
                    </div>
                    <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                </form>
            }

        </div>
        <hr>
        @foreach (Answers a in Model.Question.Answers)
        {
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">
                        <small>@a.DatePosted.ToShortDateString()</small>
                    </h4>
                    @a.Text
                </div>
            </div>
        }
    </div>
</div>
@section Scripts{
    <script src="~/js/Likes.js"></script>
}